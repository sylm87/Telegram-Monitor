TG_API_ID=
TG_API_HASH=
TG_SESSION=me
# PostgreSQL Configuration
POSTGRES_PORT=5432
POSTGRES_DB=db_name
POSTGRES_USER=db_username
POSTGRES_PASSWORD=db_password

# Media directory
TG_MEDIA_DIR=/app/media_downloads

# Gap threshold
LISTENER_HISTORIC_GAP_THRESHOLD=10

#Frontend
API_BASE=http://127.0.0.1:8000

# CORS (opcional): por defecto la API permite "*".
# Puedes restringir orígenes con CSV o JSON:
#CORS_ALLOW_ORIGINS=http://localhost:3000,http://192.168.1.141:3000
CORS_ALLOW_ORIGINS=["http://localhost:3000","http://192.168.1.X:3000"]


# -----------------------------------------------------------------------------
# Notificaciones (Telegram Bot API)
# -----------------------------------------------------------------------------
# Token del bot que enviará notificaciones.
# Ejemplo: 123456789:AAE... (NO lo compartas)
TG_NOTIFY_BOT_TOKEN=

# IDs de destino separados por coma o punto y coma.
# Ejemplos: 12345678,-1001234567890
TG_NOTIFY_CHAT_IDS=

# (Opcional) Prefijo para identificar entorno/instancia.
# Ejemplo: [Telegram-Monitor][client1]
TG_NOTIFY_PREFIX=

# (Opcional) Cooldowns para evitar spam (segundos)
TG_NOTIFY_STARTUP_COOLDOWN_SECONDS=21600
TG_NOTIFY_CATCHUP_START_COOLDOWN_SECONDS=3600
TG_NOTIFY_GAPS_COOLDOWN_SECONDS=1800
TG_NOTIFY_DB_COOLDOWN_SECONDS=900
TG_NOTIFY_ERROR_COOLDOWN_SECONDS=900

# (Opcional) Ajustes avanzados
TG_NOTIFY_TIMEOUT_SECONDS=10
#TG_NOTIFY_API_BASE=https://api.telegram.org

